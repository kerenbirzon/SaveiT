<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoryListFragment">

    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.saveit.main.CategoryListFragment"
        android:label="fragment_category_list"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_categoryList_to_addCategory"
            app:destination="@id/addCategoryFragment" />
        <action
            android:id="@+id/action_categoryList_to_category"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_categoryList_to_myCategories"
            app:destination="@id/myCategoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.saveit.main.AddCategoryFragment"
        android:label="fragment_add_category">
        <action
            android:id="@+id/action_addCategory_to_chooseIcon"
            app:destination="@id/chooseIconFragment" />
        <argument
            android:name="ImageView"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/chooseIconFragment"
        android:name="com.example.saveit.main.ChooseIconFragment"
        android:label="fragment_choose_icon"
        tools:layout="@layout/fragment_choose_icon" >
        <argument
            android:name="ImageView"
            app:argType="integer" />
        <action
            android:id="@+id/action_chooseIconFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.saveit.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <argument
            android:name="category"
            app:argType="com.example.saveit.model.Category" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.saveit.common.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment" />
    <fragment
        android:id="@+id/myCategoriesFragment"
        android:name="com.example.saveit.main.MyCategoriesFragment"
        android:label="fragment_my_categories"
        tools:layout="@layout/fragment_my_categories" />
</navigation>