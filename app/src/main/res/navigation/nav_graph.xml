<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoryListFragment">

    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.saveit.main.CategoryListFragment"
        android:label="fragment_category_list"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_categoryList_to_addCategory"
            app:destination="@id/addCategoryFragment" />
        <action
            android:id="@+id/action_categoryList_to_category"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.saveit.main.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category" >
        <action
            android:id="@+id/action_addCategory_to_chooseIcon"
            app:destination="@id/chooseIconFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.saveit.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_category_to_document"
            app:destination="@id/documentFragment" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/chooseIconFragment"
        android:name="com.example.saveit.main.ChooseIconFragment"
        android:label="fragment_choose_icon"
        tools:layout="@layout/fragment_choose_icon" >
        <argument
            android:name="ImageView"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/documentFragment"
        android:name="com.example.saveit.document.DocumentFragment"
        android:label="fragment_document"
        tools:layout="@layout/fragment_document" >
        <action
            android:id="@+id/action_documentFragment_pop"
            app:popUpTo="@id/categoryFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>