<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoryListFragment">

    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.saveit.CategoryListFragment"
        android:label="fragment_category_list"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_categoryList_to_addCategory"
            app:destination="@id/addCategoryFragment" />
        <action
            android:id="@+id/action_categoryList_to_category"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.saveit.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category" >
        <action
            android:id="@+id/action_addCategoryFragment_pop"
            app:popUpTo="@id/categoryListFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_addCategory_to_chooseIcon"
            app:destination="@id/chooseIconFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.saveit.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/chooseIconFragment"
        android:name="com.example.saveit.ChooseIconFragment"
        android:label="fragment_choose_icon"
        tools:layout="@layout/fragment_choose_icon" >
        <action
            android:id="@+id/action_chooseIconFragment_pop"
            app:popUpTo="@id/addCategoryFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>